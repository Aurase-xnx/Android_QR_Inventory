<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/usermod_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modification de l'utilisateur"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248"></TextView>

    <EditText
        android:id="@+id/usermod_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/usermod_title"
        android:paddingBottom="10dp"
        android:hint="Nom d'utilisateur"></EditText>

    <EditText
        android:id="@+id/usermod_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/usermod_username"
        android:paddingBottom="10dp"
        android:hint="Mot de passe"></EditText>


    <Button
        android:id="@+id/usermod_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier l'utilisateur"
        app:layout_constraintTop_toBottomOf="@id/usermod_password"
        android:layout_marginBottom="10dp"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>