<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/itemCreator_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouvel appareil"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248"></TextView>

    <Spinner
        android:id="@+id/itemCreator_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/itemCreator_title"
        android:paddingBottom="10dp"
        android:hint="Type d'appareil"></Spinner>

    <EditText
        android:id="@+id/itemCreator_marqueEtModele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemCreator_type"
        android:paddingBottom="10dp"
        android:hint="Marque et modèle"></EditText>
    <EditText
        android:id="@+id/itemCreator_identifiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemCreator_marqueEtModele"
        android:paddingBottom="10dp"
        android:hint="Identifiant unique"></EditText>
    <EditText
        android:id="@+id/itemCreator_qrCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemCreator_identifiant"
        android:paddingBottom="10dp"
        android:hint="qrCode"></EditText>


    <Button
        android:id="@+id/itemCreator_creator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Créer l'objet"
        app:layout_constraintTop_toBottomOf="@id/itemCreator_qrCode"
        android:layout_marginBottom="10dp"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>