<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/itemModifier_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier appareil"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248"></TextView>


    <EditText
        android:id="@+id/itemModifier_marqueEtModele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemModifier_title"
        android:paddingBottom="10dp"
        android:hint="Marque et modèle"></EditText>
    <EditText
        android:id="@+id/itemModifier_identifiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemModifier_marqueEtModele"
        android:paddingBottom="10dp"
        android:hint="Identifiant unique"></EditText>

    <Switch
        android:id="@+id/itemModifier_isHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/itemModifier_identifiant"
        android:hint="Emprunté"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </Switch>


    <Button
        android:id="@+id/itemModifier_modifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier l'objet"
        app:layout_constraintTop_toBottomOf="@id/itemModifier_isHere"
        android:layout_marginBottom="10dp"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>